@page "/admin"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>Admin Dashboard - Spring Ridge Flowers</PageTitle>

<MudText Typo="Typo.h4" GutterBottom="true">Admin Dashboard</MudText>

<MudGrid>
    <MudItem xs="12" sm="6" md="4">
        <MudCard>
            <MudCardContent>
                <MudText Typo="Typo.h6">Plant Management</MudText>
                <MudText Typo="Typo.body2" Class="mb-4">Add, edit, and manage plants and inventory.</MudText>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/admin/plants">
                    Manage Plants
                </MudButton>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="4">
        <MudCard>
            <MudCardContent>
                <MudText Typo="Typo.h6">Orders</MudText>
                <MudText Typo="Typo.body2" Class="mb-4">View and manage customer orders.</MudText>
                <MudButton Variant="Variant.Outlined" Color="Color.Primary" Disabled="true">
                    Coming Soon
                </MudButton>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

<MudDivider Class="my-6" />

<form method="post" action="/api/auth/logout">
    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Secondary">
        Logout
    </MudButton>
</form>
